{% extends 'base.html.twig' %}

{% block title %}Optica Nova{% endblock %}

{% block body %}
{{ include('comun/header.html.twig') }}

<div class="example-wrapper">
    <h1 class="text-4xl font-semibold text-center text-gray-900 mt-12">Gafas</h1>

    <div class="container mx-auto px-6 py-12">
        <h2 class="text-3xl font-bold tracking-tight text-gray-900 mb-8">Gafas disponibles</h2>

        <div class="mt-6 grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 xl:grid-cols-4 gap-x-6 gap-y-10">
            {% for gafa in gafas %}
                <div class="relative bg-white rounded-lg shadow-lg overflow-hidden">
                    <!-- Imagen (con altura y ancho fijos) -->
                    <div class="w-full h-48 bg-gray-200 overflow-hidden rounded-t-lg">
                        <img src="{{ asset('images/gafas/' ~ gafa.id ~ '.jpg') }}" alt="{{ gafa.descripcion }}" class="h-28 w-auto object-contain object-center">
                    </div>
                    <!-- Descripción (debajo de la imagen, ocupando el resto de la card) -->
                    <div class="p-6">
                        <h3 class="text-lg font-semibold text-gray-800">{{ gafa.marca }}</h3>
                        <p class="text-sm text-gray-600">{{ gafa.modelo }}</p>
                        <p class="mt-2 text-sm text-gray-500">{{ gafa.descripcion }}</p>
                        <div class="mt-4 flex items-center justify-between">
                            <p class="text-lg font-semibold text-gray-900">{{ gafa.precio }}€</p>
                            <div class="flex items-center space-x-3">
                                <!-- Aseguramos que el botón se vea bien -->
                                <button class="px-6 py-3 text-lg font-semibold text-white bg-blue-600 border-4 border-red-500 rounded-lg hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 !bg-blue-600 !text-white">
                                    Carrito
                                </button>
                            </div>
                            <span class="px-3 py-1 text-xs font-medium bg-indigo-600 text-white rounded-full">{{ gafa.categoria }}</span>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
</div>

{% endblock %}

{% block styles %}
    <!-- Importación de Google Fonts para mayor elegancia -->
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@600&family=Roboto:wght@400&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Roboto', sans-serif;
        }

        h1, h2, h3 {
            font-family: 'Poppins', sans-serif;
        }

        /* Estilo del botón */
        button {
            background-color: #3182ce !important; /* Fondo azul */
            color: white !important; /* Texto blanco */
            padding: 12px 24px !important; /* Tamaño adecuado */
            border-radius: 8px !important; /* Bordes redondeados */
            border: 2px solid #e53e3e !important; /* Borde rojo */
            cursor: pointer !important; /* Cursor tipo puntero */
            transition: background-color 0.3s ease !important; /* Transición suave */
            display: inline-block !important; /* Asegura que el botón se muestre como un bloque en línea */
            opacity: 1 !important; /* Asegura que el botón no esté invisible */
            z-index: 999 !important; /* Asegura que esté por encima de otros elementos */
        }

        /* Estilo al pasar el ratón */
        button:hover {
            background-color: #2b6cb0 !important; /* Color de fondo al pasar el ratón */
        }

        /* Estilo al estar enfocado */
        button:focus {
            outline: none !important; /* Eliminar el borde de enfoque por defecto */
            box-shadow: 0 0 0 2px rgba(59, 130, 246, 0.5) !important; /* Borde azul de enfoque */
        }
    </style>
{% endblock %}
