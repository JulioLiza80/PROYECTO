{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
    <h1>User index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Email</th>
                <th>Password</th>
                <th>Nombre</th>
                <th>Apellido1</th>
                <th>Apellido2</th>
                <th>Verificado</th>
                <th>Direccion</th>
                <th>Ciudad</th>
                <th>Cp</th>
                <th>DocumentName</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.email }}</td>
            {#    <td>{{ user.roles ? user.roles|json_encode : '' }}</td>#}
                <td>{{ user.password }}</td>
                <td>{{ user.nombre }}</td>
                <td>{{ user.apellido1 }}</td>
                <td>{{ user.apellido2 }}</td>
               <td>{{ user.isVerified ? 'Yes' : 'No' }}</td>
                <td>{{ user.direccion }}</td>
                <td>{{ user.ciudad }}</td>
                <td>{{ user.cp }}</td>
                <td>{{ user.documentName }}</td>
                <td>
                    <a href="{{ path('app_user_show', {'id': user.id}) }}">show</a>
                    <a href="{{ path('app_user_edit', {'id': user.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="14">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_user_new') }}">Create new</a>
{% endblock %}
