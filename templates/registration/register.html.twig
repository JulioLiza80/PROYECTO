{% extends 'base.html.twig' %}

{% block title %}Registro{% endblock %}

{% block body %}
	{{ include('comun/header.html.twig') }}
	<div
		class="flex items-center justify-center min-h-screen bg-gray-50">
		<div
			class="w-full max-w-md p-6 bg-white rounded-lg shadow-lg border border-gray-200">

			{% if showForm %}
				<h1 class="text-center text-2xl font-semibold mb-6">Crear cuenta</h1>

				{{ form_start(registrationForm, { 'attr': { 'class': 'space-y-4' } }) }}

				<div class="space-y-4">
					{{ form_row(registrationForm.nombre, { 'label': 'Nombre', 'label_attr': {'class': 'font-semibold'}, 'attr': {'class': 'border border-gray-300 rounded-md p-2 w-full'}}) }}

					{{ form_row(registrationForm.apellido1, { 'label': 'Primer Apellido', 'label_attr': {'class': 'font-semibold'}, 'attr': {'class': 'border border-gray-300 rounded-md p-2 w-full'}}) }}

					{{ form_row(registrationForm.apellido2, { 'label': 'Segundo Apellido', 'label_attr': {'class': 'font-semibold'}, 'attr': {'class': 'border border-gray-300 rounded-md p-2 w-full'}}) }}

					{{ form_row(registrationForm.email, { 'label': 'Email', 'label_attr': {'class': 'font-semibold'}, 'attr': {'class': 'border border-gray-300 rounded-md p-2 w-full'}}) }}

					{{ form_row(registrationForm.plainPassword, { 'label': 'Contraseña', 'label_attr': {'class': 'font-semibold'}, 'attr': {'class': 'border border-gray-300 rounded-md p-2 w-full'}}) }}

					{{ form_row(registrationForm.passwordConfirm, { 'label': 'Confirmar Contraseña', 'label_attr': {'class': 'font-semibold'}, 'attr': {'class': 'border border-gray-300 rounded-md p-2 w-full'}}) }}

					<div class="flex items-center space-x-2 mt-4">
						<div class="flex items-center">
							{{ form_widget(registrationForm.agreeTerms, {'attr': {'class': 'h-4 w-4 text-blue-500 border-gray-300 rounded'}}) }}
							<label for="{{ registrationForm.agreeTerms.vars.id }}" class="ml-2 text-sm text-gray-700">He leído y acepto la
								<a class="underline" href="#privacyPolicy">Política de Privacidad</a>
								y los
								<a class="underline" href="#serviceTerms">Términos de Servicio</a>
							</label>
						</div>
					</div>
				</div>

				<button type="submit" class="w-full py-2 px-4 hover:bg-novapurple text-white font-semibold rounded-lg  bg-[#9736af] transition duration-200">Registrarme</button>

				{{ form_end(registrationForm) }}
			{% else %}
					<div class="text-center p-4 bg-green-100 text-green-800 border border-green-400 rounded-lg space-y-4">
						<p><strong>{{ emailVerifiedMessage1|trans }}</strong></p>
                        <p><strong>{{ emailVerifiedMessage2|trans }}</strong></p>
					</div>
			{% endif %}
		</div>
	</div>
	{{ include('comun/footer.html.twig') }}
{% endblock %}
