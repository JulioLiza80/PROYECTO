{% extends 'base.html.twig' %}

{% block title %}Detalles de Gafas
{% endblock %}

{% block body %}
	<div style="display: flex; justify-content: center; align-items: center; height: 100vh;">
		<div
			style="width: 600px; height: 600px; border: 1px solid #ccc; border-radius: 10px; padding: 20px; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); display: flex; flex-direction: column; justify-content: space-between; background-color: #fff;">

			<!-- Imagen de las gafas -->
			<div style="flex: 2; display: flex; justify-content: center; align-items: center;">
				<img src="{{ asset('uploads/gafas/' ~ gafa.imageName) }}" alt="{{ gafa.marca }} {{ gafa.modelo }}" style="max-width: 100%; max-height: 100%; object-fit: cover; border-radius: 8px;">
			</div>

			<!-- Botón de añadir al carrito -->
			<div style="flex: 1; display: flex; flex-direction: column; justify-content: center; align-items: center; margin-top: 20px;">
				<form method="POST" action="{{ path('app_aniadir', {'id': gafa.id, 'cat': 1}) }}" style="margin-bottom: 20px;">
					<button type="submit" style="padding: 10px 20px; font-size: 16px; background-color: #007bff; color: #fff; border: none; border-radius: 5px; cursor: pointer;">
						Añadir al carrito
					</button>
				</form>
			</div>

			<!-- Detalles de las gafas -->
			<div style="flex: 2; text-align: left; margin-top: 20px;">
				<h3>{{ gafa.marca }}
					-
					{{ gafa.modelo }}</h3>
				<p>
					<strong>Descripción:</strong>
					{{ gafa.descripcion }}</p>
				<p>
					<strong>Color Montura:</strong>
					{{ gafa.colorMontura }}</p>
				<p>
					<strong>Precio:</strong>
					{{ gafa.precio }}
					€</p>
				<p>
					<strong>Stock:</strong>
					{{ gafa.stock }}</p>
			</div>
		</div>
	</div>
{% endblock %}
