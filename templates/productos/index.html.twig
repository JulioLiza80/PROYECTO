{% extends 'base.html.twig' %}

{% block title %}Productos index{% endblock %}

{% block body %}
    <h1>Productos index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Marca</th>
                <th>Modelo</th>
                <th>PrecioSinIva</th>
                <th>Iva</th>
                <th>Descuento</th>
                <th>Stock</th>
                <th>Estado</th>
                <th>Descripcion</th>
                <th>Imagen</th>
                <th>Acci√≥n</th>
            </tr>
        </thead>
        <tbody>
        {% for producto in productos %}
            <tr>
                <td>{{ producto.id }}</td>
                <td>{{ producto.marca }}</td>
                <td>{{ producto.modelo }}</td>
                <td>{{ producto.precioSinIva }}</td>
                <td>{{ producto.iva }}</td>
                <td>{{ producto.descuento }}</td>
                <td>{{ producto.stock }}</td>
                <td>{{ producto.estado }}</td>
                <td>{{ producto.descripcion }}</td>
                <td>
                    {% if producto.imageName %}
                    <img src="{{ vich_uploader_asset(producto, 'imageFile') }}" alt="{{ producto.imageName }}" width="80px">
                    {% endif %}
                </td>

                <td>
                    <a href="{{ path('app_productos_show', {'id': producto.id}) }}">show</a>
                    <a href="{{ path('app_productos_edit', {'id': producto.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="10">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_productos_new') }}">Create new</a>
{% endblock %}
