{% extends 'base.html.twig' %}

{% block title %}Configuración{% endblock %}

{% block body %}

    {{ include('comun/header.html.twig') }}

	<div class="max-w-4xl mx-auto p-6 bg-white shadow rounded-lg mt-10 mb-24">

		<h1 class="text-2xl font-semibold text-gray-800 mb-6">Configuración</h1>

		<!-- Menú lateral -->
		<div class="flex">
			<nav class="w-1/4 pr-6 border-r">
				<ul>
					<li>
                        <a href="{{ path('app_user_config', {'activeTab': 'cuenta'}) }}" class="block py-2 px-2 md:px-4
						                            {% if activeTab == 'cuenta' %}bg-gray-200 text-gray-800 font-bold{% else %}text-gray-600{% endif %}
						                            rounded text-sm md:text-md">
                            Mi Cuenta
                        </a>
                    </li>
					<li>
                        <a href="{{ path('app_user_config', {'activeTab': 'pedidos'}) }}" class="block py-2 px-2 md:px-4
						                            {% if activeTab == 'pedidos' %}bg-gray-200 text-gray-800 font-bold{% else %}text-gray-600{% endif %}
						                            rounded text-sm md:text-md">
                            Mis Pedidos
                        </a>
                    </li>
                    <li>
                        <a href="{{ path('app_forgot_password_request', {'activeTab': 'contraseña'}) }}" class="block py-2 px-2 md:px-4
						                            {% if activeTab == 'contraseña' %}bg-gray-200 text-gray-800 font-bold{% else %}text-gray-600{% endif %}
						                            rounded text-sm md:text-md">
                            Cambiar contraseña
                        </a>
                    </li>
				</ul>
			</nav>

            <!-- Formulario de edición -->
            <div class="w-3/4 pl-6">
                {% block content %}
                    {% if activeTab == 'cuenta' %}
                        {# Renderiza la plantilla cuenta.html.twig para Mi Cuenta #}
                        {{ include('cuenta.html.twig') }}
                    {% elseif activeTab == 'pedidos' %}
                        {# Renderiza el template para Mis Pedidos #}
                        {{ include('pedidos.html.twig') }}
                    {% elseif activeTab == 'detallePedido'%}
                        {# Renderiza el template para Detalle de Pedido #}
                        {{ include('detalle_pedido.html.twig') }}
                    {% else %}
                         {{ include('reset_password\request.html.html.twig') }}
                    {% endif %}
                {% endblock %}
            </div>
        </div>
	</div>


{% endblock %}
