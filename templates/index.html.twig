{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

{{include('comun/header.html.twig')}}

<div class="example-wrapper">
   <h1>Esta es la página de inicio</h1>
   {% if is_granted('IS_AUTHENTICATED_FULLY') %}
   <h2>Bienvenido {{ app.user.nombre }}</h2>
   <button><a href="{{ path('app_logout') }}">Logout</a></button>
   {% else %}
   <button> <a href="{{ path('app_login') }}">Login</a></button>
   <button><a href="{{ path('app_register') }}">Registro</a></button>
   <button><a href="{{ path('app_forgot_password_request') }}">He olvidado mi contraseña</a></button>
   {% endif%}
  </div>


{% endblock %}
