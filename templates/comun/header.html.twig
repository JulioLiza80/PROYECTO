{% block body%}

<header class="bg-[#FAFAFA] bg-opacity-80 backdrop-blur-md sticky top-0 z-10">
	<nav>
		<div class="max-w-[95%] mx-auto px-4 sm:px-6 lg:px-8">
			<div
				class="flex items-center justify-between h-16">
				<!-- Logo -->
				<div class="flex-shrink-0">
					<a href="{{ path('app_home') }}">
						<img src="{{ asset('images/logos/novaopticos-no-slogan.png') }}" alt="Logo" class="h-10 w-auto">
					</a>
				</div>


				<!-- Categorías -->
				<div class="hidden lg:block">
					<div class="flex text-sm raleway font-semibold items-center md:space-x-4 lg:space-x-8">
						<a href="#promos" class="text-novapurple hover:text-novagreen font-black px-3 py-2">Nuestras Promos</a>
						<a href="{{ path('app_gafas_sol_index') }}" class="text-black hover:text-gray-600 px-3 py-2">Gafas de Sol</a>
						<a href="{{ path('app_gafas_index') }}" class="text-black hover:text-gray-600 px-3 py-2">Gafas Graduadas</a>
						<a href="{{ path('app_lentillas_index') }}" class="text-black hover:text-gray-600 px-3 py-2">Lentillas</a>
					</div>
				</div>

				<div class="flex justify-center text-center items-center space-x-2 md:space-x-4">
					<!-- Hamburger icon for mobiles -->
					<div class="flex justify-center text-center items-center lg:hidden mx-2">
						<button id="menu-button" class="text-black hover:text-gray-600 focus:outline-none">
							<svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewbox="0 0 24 24" stroke="currentColor" stroke-width="2">
								<path stroke-linecap="round" stroke-linejoin="round" d="M4 6h16M4 12h16m-7 6h7"/>
							</svg>
						</button>
					</div>
					<div
						class="relative group hidden lg:block">
						<!-- Login Icon -->
						<a class="text-black hover:text-gray-600 cursor-pointer">
							<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewbox="0 0 24 24" fill="currentColor" class="icon icon-tabler icons-tabler-filled icon-tabler-user"><path stroke="none" d="M0 0h24v24H0z" fill="none"/><path d="M12 2a5 5 0 1 1 -5 5l.005 -.217a5 5 0 0 1 4.995 -4.783z"/><path d="M14 14a5 5 0 0 1 5 5v1a2 2 0 0 1 -2 2h-10a2 2 0 0 1 -2 -2v-1a5 5 0 0 1 5 -5h4z"/></svg>
						</a>


						<div class="absolute left-0 w-28 bg-white shadow-lg rounded-lg py-2 hidden group-hover:flex group-hover:top-full flex-col transition-all duration-150 ease-in-out">
							{% if is_granted('IS_AUTHENTICATED_FULLY') %}
								{% if is_granted('ROLE_ADMIN') %}
									<a href="/admin" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 font-bold">Admin</a>
								{% else %}
									<a href="{{ path('app_user_config') }}" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 font-bold">User</a>
								{% endif %}
								<a href="{{ path('app_logout') }}" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100">Logout</a>
							{% else %}
								<button id="open-modal" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100">Login</button>
								<a href="{{ path('app_register') }}" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100">Register</a>
							{% endif %}
						</div>
					</div>

					{% if is_granted('IS_AUTHENTICATED_FULLY') %}
						<a href="{{ path('app_user_config') }}" class="hidden lg:block text-black mt-1 mx-2">
							Hola, {{ app.user.nombre }}
						</a>

						<!-- Carrito Icon -->
						<a href="{{ path('app_carrito') }}" class="text-black hover:text-gray-600 mx-2">
							<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewbox="0 0 24 24" fill="currentColor" class="icon icon-tabler icons-tabler-filled icon-tabler-shopping-cart"><path stroke="none" d="M0 0h24v24H0z" fill="none"/><path d="M6 2a1 1 0 0 1 .993 .883l.007 .117v1.068l13.071 .935a1 1 0 0 1 .929 1.024l-.01 .114l-1 7a1 1 0 0 1 -.877 .853l-.113 .006h-12v2h10a3 3 0 1 1 -2.995 3.176l-.005 -.176l.005 -.176c.017 -.288 .074 -.564 .166 -.824h-5.342a3 3 0 1 1 -5.824 1.176l-.005 -.176l.005 -.176a3.002 3.002 0 0 1 1.995 -2.654v-12.17h-1a1 1 0 0 1 -.993 -.883l-.007 -.117a1 1 0 0 1 .883 -.993l.117 -.007h2zm0 16a1 1 0 1 0 0 2a1 1 0 0 0 0 -2zm11 0a1 1 0 1 0 0 2a1 1 0 0 0 0 -2z"/></svg>
						</a>
					{% else %}
						<!-- Carrito Icon -->
						<a href="{{ path('app_carrito') }}" class="text-black hover:text-gray-600">
							<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewbox="0 0 24 24" fill="currentColor" class="icon icon-tabler icons-tabler-filled icon-tabler-shopping-cart"><path stroke="none" d="M0 0h24v24H0z" fill="none"/><path d="M6 2a1 1 0 0 1 .993 .883l.007 .117v1.068l13.071 .935a1 1 0 0 1 .929 1.024l-.01 .114l-1 7a1 1 0 0 1 -.877 .853l-.113 .006h-12v2h10a3 3 0 1 1 -2.995 3.176l-.005 -.176l.005 -.176c.017 -.288 .074 -.564 .166 -.824h-5.342a3 3 0 1 1 -5.824 1.176l-.005 -.176l.005 -.176a3.002 3.002 0 0 1 1.995 -2.654v-12.17h-1a1 1 0 0 1 -.993 -.883l-.007 -.117a1 1 0 0 1 .883 -.993l.117 -.007h2zm0 16a1 1 0 1 0 0 2a1 1 0 0 0 0 -2zm11 0a1 1 0 1 0 0 2a1 1 0 0 0 0 -2z"/></svg>
						</a>
					{% endif %}
				</div>

			</div>
			<!-- Menú desplegable móvil -->
			<div id="mobile-menu" class="hidden lg:hidden">
			<hr>
				<div class="py-2">
					{% if is_granted('IS_AUTHENTICATED_FULLY') %}
						<a href="{{ path('app_user_config') }}" class="text-gray-700 pb-4">Hola, {{ app.user.nombre }}</a></a>
						{% if is_granted('ROLE_ADMIN') %}
							<a href="/admin" class="block w-full px-4 py-2 text-gray-700 font-bold">Admin</a>
						{% else %}
							<a href="{{ path('app_user_config') }}" class="block w-full px-4 py-2 text-gray-700 font-bold">User</a>
						{% endif %}
						<a href="{{ path('app_logout') }}" class="block w-full px-4 py-2 text-gray-700">Logout</a>
					{% else %}
						<button id="open-modal-mobile" class="block px-4 py-2 text-gray-700">Login</button>
						<a href="{{ path('app_register') }}" class="block px-4 py-2 text-gray-700">Register</a>
					{% endif %}
				</div>
				<hr>
				<div class="px-2 pt-2 pb-3 space-y-1">
					<a href="#promos" class="block w-full text-novapurple hover:text-novagreen font-black px-3 py-2">Nuestras Promos</a>
					<a href="{{ path('app_gafas_sol_index') }}" class="block w-full text-black hover:text-gray-600 px-3 py-2">Gafas de Sol</a>
					<a href="{{ path('app_gafas_index') }}" class="block w-full text-black hover:text-gray-600 px-3 py-2">Gafas Graduadas</a>
					<a href="{{ path('app_lentillas_index') }}" class="block w-full text-black hover:text-gray-600 px-3 py-2">Lentillas</a>
				</div>
			</div>
		</div>
	</nav>
</header>

<!-- Login Modal -->
<div id="loginmodal" class="fixed inset-0 z-50 hidden bg-black bg-opacity-50 flex justify-center items-center">
	<div class="bg-white rounded-lg shadow-lg max-w-md w-full mx-2 p-6">
		<div class="flex justify-end">
			<button id="close-modal" class="bg-gray-50 hover:bg-gray-100 text-gray-800 font-bold py-1 px-2 rounded">X</button>
		</div>
		<h2 class="text-lg font-bold mb-4 text-black">Usuarios</h2>
		<form action="{{ path('app_login') }}" method="post">
			<div class="mb-4">
				<label for="username" class="block text-sm font-medium text-gray-700">Email:</label>
				<input type="email" id="username" name="_username" class="mt-1 block w-full border border-gray-300 rounded-md p-2 focus:outline-none focus:ring-2 focus:ring-blue-500" placeholder="name@example.com" required>
			</div>
			<div class="mb-4">
				<label for="password" class="block text-sm font-medium text-gray-700">Password:</label>
				<input type="password" name="_password" class="mt-1 block w-full border border-gray-300 rounded-md p-2 focus:outline-none focus:ring-2 focus:ring-blue-500" id="passwordLogin" placeholder="*******" required>
			</div>

			{% if app.request.query.get('error') is not null %}
				<div class="alert alert-danger text-red-600">El usuario, contraseña o ambos no son correctos.</div>
			{% endif %}

			<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
			<div class="d-grid mb-4">
				<button type="submit" class="w-full py-2 px-4 hover:bg-novapurple text-white font-semibold rounded-lg  bg-[#9736af] transition duration-200">Iniciar sesión</button>
			</div>
		</form>
		<a href="{{ path('app_forgot_password_request') }}" class="text-sm font-medium text-gray-700 px-3">He olvidado mi contraseña</a>
	</div>
</div>

<script></script>

{%endblock%}
