{% extends 'base.html.twig' %}

{% block title %}Detalles de Gafas{% endblock %}

{% block body %}
    <div style="display: flex; justify-content: center; align-items: center; min-height: 100vh; padding: 20px;">
        <!-- Contenedor principal con más espacio -->
        <div style="width: 800px; max-width: 100%; padding: 20px; border-radius: 10px; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); background-color: #fff; display: flex; flex-direction: column; gap: 20px;">
            
            <!-- Contenedor para la imagen y detalles -->
            <div style="display: flex; flex-direction: row; justify-content: space-between; align-items: flex-start;">
                
                <!-- Imagen de las gafas -->
                <div style="flex: 1; display: flex; justify-content: center; align-items: center;">
                    <img src="{{ asset('images/gafas/' ~ gafa.imageName) }}" alt="{{ gafa.marca }} {{ gafa.modelo }}" style="max-width: 100%; max-height: 400px; object-fit: cover; border-radius: 8px;">
                </div>

                <!-- Detalles de las gafas -->
                <div style="flex: 1; padding-left: 20px; text-align: left;">
                    <h3>{{ gafa.marca }} - {{ gafa.modelo }}</h3>
                    <p><strong>Descripción:</strong> {{ gafa.descripcion }}</p>
                    <p><strong>Color Montura:</strong> {{ gafa.colorMontura }}</p>
                    <p><strong>Precio:</strong> {{ gafa.precio }} €</p>
                    <p><strong>Stock:</strong> {{ gafa.stock }}</p>
                </div>
            </div>

            <!-- Botón de añadir al carrito -->
            <div style="display: flex; justify-content: center; margin-top: 20px;">
                <form method="POST" action="{{ path('app_aniadir', {'id': gafa.id, 'cat': 1}) }}">
                    <button type="submit" style="padding: 10px 20px; font-size: 16px; background-color: #007bff; color: #fff; border: none; border-radius: 5px; cursor: pointer;">
                        Añadir al carrito
                    </button>
                </form>
            </div>

        </div>
    </div>
{% endblock %}
