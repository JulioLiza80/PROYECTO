{% extends 'base.html.twig' %}

{% block title %}Restablecer contraseña
{% endblock %}

{% block body %}
	{{ include('comun/header.html.twig') }}
	<div
		class="flex items-center justify-center min-h-screen bg-gray-50">
		<div
			class="w-full max-w-md p-6 bg-white rounded-lg shadow-lg border border-gray-200">
			{% for flash_error in app.flashes('reset_password_error') %}
				<div class="alert alert-danger text-center p-4 mb-6 bg-red-100 text-red-800 border border-red-400 rounded-lg">
					<strong>{{ flash_error }}</strong>
				</div>
			{% endfor %}

			<h1 class="text-center text-2xl font-semibold mb-6">Restablecer contraseña</h1>

			{{ form_start(requestForm, { 'attr': { 'class': 'space-y-4' } }) }}

			<div class="space-y-4">
				{{ form_row(requestForm.email, { 'label': 'Email', 'label_attr': {'class': 'font-semibold'}, 'attr': {'class': 'border border-gray-300 rounded-md p-2 w-full'}}) }}

				<div>
					<small class="text-sm text-gray-600">
						Ingresa tu dirección de correo electrónico y te enviaremos un enlace para restablecer tu contraseña.
					</small>
				</div>
			</div>

			<button type="submit" class="w-full py-2 px-4 hover:bg-novapurple text-white font-semibold rounded-lg  bg-[#9736af] transition duration-200">Enviar</button>

			{{ form_end(requestForm) }}
		</div>
	</div>
	{{ include('comun/footer.html.twig') }}
{% endblock %}
